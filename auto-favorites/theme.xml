<theme>
	<formatVersion>4</formatVersion>
	<include>./../theme.xml</include>
	
	<view name="system">
		<image name="background" extra="true">
				<size>1 0.5</size>
				<tile>true</tile>
				<path>./_inc/system_and.png</path>
				<tile>false</tile>
			</image>
		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>
		
        <image name="logo_helper" extra="true">
			<path>./../art/andmavlog.png</path>
			<origin>0.2 0.5</origin>
			<pos>0.65 0.58</pos>
			<size>0.4 0.13</size>
		</image>
		<carousel name="systemcarousel">
	        <color>000000</color>
	        <colorEnd>E8F6FFF6</colorEnd>
	        <pos>0 0.6537</pos>
	        <size>1 0.2325</size>
	      </carousel>

				 
		<text name="systemInfo">
			<color>d0d0d0</color>
			<pos>0.15 0.5</pos>
	    	<backgroundColor>00000000</backgroundColor>
	        <alignment>left</alignment>
	        <fontSize>0.05</fontSize>
			<fontPath>./../_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
	      </text>


	</view>

		
	
	<view name="basic, detailed, video">

		<text name="
			md_lbl_description,
			md_description,
			md_lbl_developer,
			md_developer,
			md_lbl_genre,
			md_genre,
			md_lbl_lastplayed,
			md_lastplayed,
			md_lbl_playcount,
			md_playcount,
			md_lbl_players,
			md_players,
			md_lbl_players,
			md_players,
			md_lbl_publisher,
			md_publisher,
			md_lbl_rating,
			md_rating,
			md_lbl_releasedate,
			md_releasedate
			">
			<pos>1 1</pos>
			<forceUppercase>1</forceUppercase>
			<fontPath>./../art/piccolo.ttf</fontPath>
			<fontSize>0.035</fontSize>
		</text>

			<image name="logo_helper"  extra="true">
				<origin>0 0.5</origin>
				<pos>0.30 0.0775</pos>
				<size>0.38 0.14</size>
				<path>./../art/arcand2.png</path>
			</image>
			<image name="background">
				<origin>0 0.5</origin>
				<pos>0.04 0.0775</pos>
				<size>0.25 0.14</size>
				<path>./_inc/sg.jpg</path>
				<tile>false</tile>
			</image>
			<image name="logo">
				<origin>0 0.5</origin>
				<pos>0.69 0.0775</pos>
				<size>0.25 0.14</size>
				<path>./_inc/vt.png</path>
				<tile>false</tile>
			</image>
			
			<textlist name="gamelist">
				<selectorColor>001B9D</selectorColor>
				<selectedColor>ffffff</selectedColor>
				<primaryColor>ffffff</primaryColor>
				<secondaryColor>7a6161</secondaryColor>
				<forceUppercase>1</forceUppercase>
				<pos>0.030 0.16</pos>
				<size>0.400 0.80</size>
				<alignment>left</alignment>
				<horizontalMargin>0.00</horizontalMargin>
				<lineSpacing>1.35</lineSpacing>
				<fontSize>0.045</fontSize>
				<fontPath>./../_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
			</textlist>

			

			
			<image name="logoM" extra="true">
	            <tile>false</tile>
	            <origin>0 0</origin>
				<pos>0.47 0.15</pos>
				<size>0.45 0.13</size>          
	            <path>./../art/backlin.png</path>
	         </image>
			<image name="logoV" extra="true">
	            <tile>false</tile>
	            <pos>0.47 0.29</pos>			
				<origin>0 0</origin>
				<size>0.45 0.52</size>          
	            <path>./../art/backlin.png</path>
	         </image>
			<image name="logo2" extra="true">
	            <tile>false</tile>
	            <origin>0 0</origin>
	            <pos>0.47 0.815</pos>
	         	<size>0.45 0.15</size>           
	            <path>./../art/backlin.png</path>
	         </image>
	         <image name="logo3" extra="true">
	            <tile>false</tile>
	            <origin>0 0</origin>
	            <pos>0.01 0.14</pos>
	         	<size>0.45 0.84</size>           
	            <path>./../art/backlin.png</path>
	         </image>

			<datetime name="md_releasedate">
				<fontPath>./../art/piccolo.ttf</fontPath>
				<color>ffffff</color>
				<format>(c)%Y</format>
				<pos>0.5 0.825	</pos>
				<size>0.10 0.03</size>
				<fontSize>0.035</fontSize>
				<forceUppercase>1</forceUppercase>
			</datetime>
			<text name="md_lbl_publisher">
				<fontPath>./../art/piccolo.ttf</fontPath>
				<fontSize>0.035</fontSize>
				<text>Developer:</text>
				<color>ffffff</color>
				<pos>0.600 0.825</pos>
				<size>0.400 0.03</size>
				<forceUppercase>1</forceUppercase>
			</text>	
			<text name="md_publisher">
				<fontPath>./../art/piccolo.ttf</fontPath>
				<fontSize>0.035</fontSize>
				<color>00ffd9</color>
				<pos>0.740 0.825</pos>
				<size>0.400 0.03</size>
				<forceUppercase>1</forceUppercase>
			</text>
					
			<text name="md_lbl_players">
				<fontPath>./../art/piccolo.ttf</fontPath>
				<fontSize>0.035</fontSize>
				<color>ffffff</color>
				<pos>0.5 0.850</pos>
				<forceUppercase>1</forceUppercase>
			</text>

			<text name="md_players">
				<fontPath>./../art/piccolo.ttf</fontPath>
				<fontSize>0.035</fontSize>
				<color>00ffd9</color>
				<pos>0.610 0.845</pos>
				<forceUppercase>1</forceUppercase>
			</text>
			
			<text name="md_lbl_lastplayed">
				<fontPath>./../art/piccolo.ttf</fontPath>
				<fontSize>0.035</fontSize>
				<color>ffffff</color>
				<pos>0.5 0.875</pos>
				<forceUppercase>1</forceUppercase>
			</text>
			
			<datetime name="md_lastplayed">
				<fontPath>./../art/piccolo.ttf</fontPath>
				<fontSize>0.035</fontSize>
				<color>00ffd9</color>
				<pos>0.680 0.872</pos>
				<size>0.192 0.049</size>
				<forceUppercase>1</forceUppercase>
			</datetime>
			
			<text name="md_lbl_playcount">
				<fontPath>./../art/piccolo.ttf</fontPath>
				<fontSize>0.035</fontSize>
				<color>ffffff</color>
				<pos>0.5 0.900</pos>
				<forceUppercase>1</forceUppercase>
			</text>	

			<text name="md_playcount">
				<fontPath>./../art/piccolo.ttf</fontPath>
				<fontSize>0.035</fontSize>
				<color>00ffd9</color>
				<pos>0.680 0.895</pos>
				<forceUppercase>1</forceUppercase>
			</text>	

			<text name="md_lbl_rating">
                <pos>1 1</pos>
                <color>000000</color>
                <size>0.001 0.001</size>
              
            </text>
            <rating name="md_rating">
				<filledPath>./../art/invisible.png</filledPath>
				<unfilledPath>./../art/invisible.png</unfilledPath>
			</rating>

	</view>


<view name="basic, detailed">
			<image name="md_marquee">
				<origin>0 0</origin>
				<pos>0.49 0.158</pos>
				<size>0.405 0.11</size>
			</image>

			<image name="md_image">
				<origin>0 0</origin>
				<pos>0.49 0.30</pos>
				<size>0.405 0.48</size>
			</image>
</view>



<feature supported="video">

		<view name="video">

			<video name="md_video">
				<origin>0 0</origin>
				<pos>0.49 0.313</pos>
				<size>0.405 0.48</size>
				<delay>1</delay>
				<default>static.mp4</default>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>false</showSnapshotDelay>
			</video>

			<image name="md_marquee">
				<origin>0 0</origin>
				<pos>0.49 0.158</pos>
				<size>0.405 0.11</size>
			</image>
		</view>

	</feature>

</theme>