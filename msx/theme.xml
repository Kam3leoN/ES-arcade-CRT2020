<theme>
    <formatVersion>4</formatVersion>
    <include>./../theme.xml</include>

	

	<view name="system">
		<image name="background" extra="true">
				<size>1 0.5</size>
				<path>./_inc/system_and.jpg</path>
				<tile>false</tile>
			</image>

		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>
	
		<image name="logo_helper" extra="true">
			<path>./../art/andmavlog.png</path>
			<origin>0.2 0.5</origin>
			<pos>0.65 0.58</pos>
			<size>0.4 0.13</size>
		</image>

		<carousel name="systemcarousel">
	        <color>000000</color>
	        <colorEnd>E8F6FFF6</colorEnd>
	        <pos>0 0.6537</pos>
	        <size>1 0.2325</size>
	      </carousel>

				 
		<text name="systemInfo">
			<color>d0d0d0</color>
			<pos>0.15 0.5</pos>
	    	<backgroundColor>00000000</backgroundColor>
	        <alignment>left</alignment>
	        <fontSize>0.05</fontSize>
			<fontPath>./../_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
	      </text>

	</view>

	
	<view name="system, basic">
		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>
	</view>

	<view name="detailed, video">
		<text name="
			md_lbl_description,
			md_description,
			md_lbl_developer,
			md_developer,
			md_lbl_genre,
			md_genre,
			md_lbl_lastplayed,
			md_lastplayed,
			md_lbl_playcount,
			md_playcount,
			md_lbl_players,
			md_players,
			md_lbl_players,
			md_players,
			md_lbl_publisher,
			md_publisher,
			md_lbl_rating,
			md_rating,
			md_lbl_releasedate,
			md_releasedate
			">
			<pos>1 1</pos>
			<forceUppercase>1</forceUppercase>
			<fontPath>./../art/piccolo.ttf</fontPath>
			<fontSize>0.035</fontSize>
		</text>

		<image name="Border Overlay" extra="true">
				<origin>0 0</origin>
				<pos>0.5 0.07</pos>
				<size>0.4 0.38</size>
				<path>./_inc/backlin.png</path>
				<tile>false</tile>
			</image>

			<image name="logo2" extra="true">
				<path>./_inc/system.svg</path>
				<origin>0 0</origin>
				<pos>0.05 0.06</pos>
				<size>0.4 0.13</size>
			</image>
			
			
			<image name="background" extra="true">
				<pos>0.45 0.45</pos>
				<size>0.5 0.45</size>
				<path>./_inc/system_and.jpg</path>
				<tile>false</tile>
			</image>

			<textlist name="gamelist">
				<selectorColor>1c1c1c</selectorColor>
				<selectedColor>ffffff</selectedColor>
				<primaryColor>ffffff</primaryColor>
				<secondaryColor>7a6161</secondaryColor>
				<forceUppercase>1</forceUppercase>
				<pos>0.050 0.2</pos>
				<size>0.330 0.560</size>
				<alignment>left</alignment>
				<horizontalMargin>0.00</horizontalMargin>
				<lineSpacing>1.3</lineSpacing>
				<fontSize>0.045</fontSize>
				<fontPath>./../_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
			</textlist>

			<image name="bottom2" extra="true">
				<pos>0.60 0.85</pos>
				<size>0.330 0.160</size>
				<path>./../art/arcand.png</path>
				<tile>false</tile>
			</image>
			<text name="md_lbl_publisher">
				<fontPath>./../art/piccolo.ttf</fontPath>
				<text>Developer:</text>
				<color>ffffff</color>
				<pos>0.08 0.845</pos>
				<size>0.400 0.03</size>
				<forceUppercase>1</forceUppercase>
			</text>	
			<text name="md_publisher">
				<fontPath>./../art/piccolo.ttf</fontPath>
				<color>00ffd9</color>
				<pos>0.26 0.845</pos>
				<size>0.400 0.03</size>
				<forceUppercase>1</forceUppercase>
			</text>

			<text name="md_lbl_lastplayed">
				<fontPath>./../art/piccolo.ttf</fontPath>
				<color>ffffff</color>
				<pos>0.08 0.875</pos>
				<forceUppercase>1</forceUppercase>
			</text>
			
			<datetime name="md_lastplayed">
				<fontPath>./../art/piccolo.ttf</fontPath>
				<color>00ffd9</color>
				<pos>0.26 0.872</pos>
				<size>0.192 0.049</size>
				<forceUppercase>1</forceUppercase>
			</datetime>

			<text name="md_lbl_rating">
                <pos>1 1</pos>
                <color>000000</color>
                <size>0.001 0.001</size>
              
            </text>

            <rating name="md_rating">
				<filledPath>./../art/invisible.png</filledPath>
				<unfilledPath>./../art/invisible.png</unfilledPath>
			</rating>

			<image name="md_images">
				<origin>0 0</origin>
				<pos>0.52 0.16</pos>			
				
				<size>0.36 0.28</size>
			</image>

			<image name="md_marquee">
				<pos>0.52 0.08</pos>
				<origin>0 0</origin>
				<size>0.36 0.08</size>
			</image>

	</view>





<feature supported="video">

		<view name="video">

			<video name="md_video">
				<pos>0.52 0.16</pos>			
				<origin>0 0</origin>
				<size>0.36 0.28</size>
				<delay>0.2</delay>
				<default></default>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>false</showSnapshotDelay>
				
			</video>

			
		</view>

	</feature>

</theme>