<theme>
	<formatVersion>4</formatVersion>
	<include>./../theme.xml</include>
	
	<view name="system">
		<image name="background" extra="true">
				<size>1 0.5</size>
				<tile>true</tile>
				<path>./_inc/system_and.png</path>
				<tile>false</tile>
			</image>

		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>

        <image name="logo_helper" extra="true">
			<path>./../art/andmavlog.png</path>
			<origin>0.2 0.5</origin>
			<pos>0.65 0.58</pos>
			<size>0.4 0.13</size>
		</image>

		<carousel name="systemcarousel">
	        <color>000000</color>
	        <colorEnd>E8F6FFF6</colorEnd>
	        <pos>0 0.6537</pos>
	        <size>1 0.2325</size>
	      </carousel>

				 
		<text name="systemInfo">
			<color>d0d0d0</color>
			<pos>0.15 0.5</pos>
	    	<backgroundColor>00000000</backgroundColor>
	        <alignment>left</alignment>
	        <fontSize>0.05</fontSize>
			<fontPath>./../_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
	      </text>


	</view>

	
		<image name="logo_helper" extra="true">
			<path>./../art/arcand.png</path>
			<origin>0.2 0.5</origin>
			<pos>0.6 0.8</pos>
			<size>0.4 0.20</size>
			
		</image>

	
	<view name="system, basic, video">
		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>

		
	</view>

<view name="detailed">
		
		<image name="background" >
				<tile>false</tile>
				<pos>0.5 0.05</pos>
				<origin>0 0</origin>
				<size>0.40 0.90</size>
				<path>./art/cab.jpeg</path>
				<rotation>1</rotation>
			</image>

			<image name="logo">
				<path>./_inc/system.svg</path>
				<pos>0.10 0.1</pos>
				<maxSize>0.300 0.80</maxSize>
				<origin>0 0</origin>
			</image>

			<image name="gamelist_helper" extra="true">
				<path>./art/NEO_BCK.jpg</path>
				<origin>0 0</origin>
				<pos>0.020 0.2</pos>
				<size>0.45 0.73</size>
				<color>ff0000aa</color>
			</image>

			
			<textlist name="gamelist">
				<selectorColor>1c1c1c</selectorColor>
				<selectedColor>ffffff</selectedColor>
				<primaryColor>ffffff</primaryColor>
				<secondaryColor>7a6161</secondaryColor>
				<fontPath>./art/Roboto-Medium.ttf</fontPath>
				<forceUppercase>1</forceUppercase>
				<pos>0.024 0.200</pos>
				<size>0.430 0.720</size>
				<alignment>left</alignment>
				<horizontalMargin>0.00</horizontalMargin>
				<fontSize>0.05</fontSize>
				<scrollSound>./../art/scroll.wav</scrollSound>
			</textlist>

			<image name="md_image">
				<pos>0.551 0.46</pos>			
				<origin>0 0</origin>
				<size>0.31 0.28</size>
			</image>

			<image name="md_marquee">
				<pos>0.505 0.07</pos>
				<origin>0 0</origin>
				
				<size>0.387 0.15</size>
				<rotation>-1</rotation>
			</image>

			
			<text name="md_lbl_rating, md_lbl_playcount, md_playcount, md_publisher, md_lbl_genre, md_lbl_developer, md_lbl_publisher">
                        <fontPath>./../_res/fonts/AdobeBlank.ttf</fontPath>
                        <pos>1 1</pos>
                        <size>0.001 0.001</size>
                    </text>

        <datetime name="md_releasedate, md_lbl_lastplayed, md_lbl_releasedate">
                        <fontPath>./../_res/fonts/AdobeBlank.ttf</fontPath>
                        <pos>1 1</pos>
                        <size>0.001 0.001</size>
                    </datetime>

		
	</view>




<feature supported="video">

		<view name="video">

			<image name="background" >
				<tile>false</tile>
				<pos>0.5 0.05</pos>
				<origin>0 0</origin>
				<size>0.40 0.90</size>
				<path>./art/cab.jpeg</path>
				<rotation>1</rotation>
			</image>

			<image name="logo">
				<path>./_inc/system.svg</path>
				<pos>0.09 0.05</pos>
				<size>0.300 0.12</size>
				<origin>0 0</origin>
				<zIndex>50</zIndex>
			</image>

			<image name="logo2_helper" extra="true">
			<origin>0 0</origin>
			<pos>0.088 0.045</pos>
			<size>0.302 0.082</size>
			<path>./../_inc/images/bg_color.png</path>
			<zIndex>49</zIndex>
		</image>

			<image name="gamelist_helper" extra="true">
				<path>./art/NEO_BCK.jpg</path>
				<origin>0 0</origin>
				<pos>0.020 0.2</pos>
				<size>0.45 0.73</size>
				<color>ff0000aa</color>
			</image>

			
			<textlist name="gamelist">
				<selectorColor>1c1c1c</selectorColor>
				<selectedColor>ffffff</selectedColor>
				<primaryColor>ffffff</primaryColor>
				<secondaryColor>7a6161</secondaryColor>
				<fontPath>./art/Roboto-Medium.ttf</fontPath>
				<forceUppercase>1</forceUppercase>
				<pos>0.024 0.200</pos>
				<size>0.430 0.720</size>
				<alignment>left</alignment>
				<horizontalMargin>0.00</horizontalMargin>
				<fontSize>0.05</fontSize>
				<scrollSound>./../art/scroll.wav</scrollSound>
			</textlist>

			<video name="md_video">
				<pos>0.551 0.46</pos>			
				<origin>0 0</origin>
				
				<size>0.31 0.28</size>
				<delay>0.2</delay>
				<default></default>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>false</showSnapshotDelay>
			</video>

			<image name="md_marquee">
				<pos>0.505 0.07</pos>
				<origin>0 0</origin>
				
				<size>0.387 0.15</size>
				<rotation>-1</rotation>
			</image>

			
			<text name="md_lbl_rating, md_lbl_playcount, md_playcount, md_publisher, md_lbl_genre, md_lbl_developer, md_lbl_publisher">
                        <fontPath>./../_res/fonts/AdobeBlank.ttf</fontPath>
                        <pos>1 1</pos>
                        <size>0.001 0.001</size>
                    </text>

        <datetime name="md_releasedate, md_lbl_lastplayed, md_lbl_releasedate">
                        <fontPath>./../_res/fonts/AdobeBlank.ttf</fontPath>
                        <pos>1 1</pos>
                        <size>0.001 0.001</size>
                    </datetime>

		</view>

	</feature>

</theme>