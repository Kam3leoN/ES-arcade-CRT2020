<theme>
	<formatVersion>4</formatVersion>
	<include>./../theme.xml</include>
	<view name="system">
		<image name="background" extra="true">
				<size>1 0.5</size>
				<tile>true</tile>
				<path>./_inc/system_and.png</path>
				<tile>false</tile>
			</image>

		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>
	
		<image name="logo_helper" extra="true">
			<path>./../art/andmavlog.png</path>
			<origin>0.2 0.5</origin>
			<pos>0.65 0.58</pos>
			<size>0.4 0.13</size>
		</image>
	<carousel name="systemcarousel">
	        <color>000000</color>
	        <colorEnd>E8F6FFF6</colorEnd>
	        <pos>0 0.6537</pos>
	        <size>1 0.2325</size>
	      </carousel>
		<text name="systemInfo">
			<color>d0d0d0</color>
			<pos>0.15 0.5</pos>
	    	<backgroundColor>00000000</backgroundColor>
	        <alignment>left</alignment>
	        <fontSize>0.05</fontSize>
			<fontPath>./../_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
	      </text>
	</view>
	
	<view name="system, basic">
		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>
	</view>

<view name="basic, detailed, video">
    <image name="bottom" extra="true">
            <path>./_res/images/white.png</path>
            <origin>0 0</origin>
            <pos>0 0.96</pos>
            <size>1 0.0655</size>
	        <color>062542</color>
	        <zIndex>41</zIndex>
    </image>
</view>

	<view name="detailed, video">
			<image name="gamelist-matte" extra="true">
                <path>./../_res/images/white.png</path>
                <origin>0 0</origin>
                <pos>0.6 0.3</pos>
                <size>0.4 0.62</size>
                <tile>false</tile>
                <color>ffffffcc</color>
                <zIndex>40</zIndex>
            </image>
			
			<textlist name="gamelist">
				<selectorColor>1c1c1c</selectorColor>
				<selectedColor>ffffff</selectedColor>
				<primaryColor>062542</primaryColor>
				<secondaryColor>062542</secondaryColor>
				<forceUppercase>1</forceUppercase>
				<pos>0.6 0.3</pos>
				<size>0.330 0.600</size>
				<alignment>left</alignment>
				<horizontalMargin>0.00</horizontalMargin>
				<fontSize>0.045</fontSize>
				<fontPath>./../_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
				<lineSpacing>1.2</lineSpacing>
				<zIndex>41</zIndex>
			</textlist>
			
			<image name="bottom2" extra="true">
				<pos>0.55 0.01</pos>
				<size>0.330 0.160</size>
				<path>./../art/arcand.png</path>
				<tile>false</tile>
			</image>
			<image name="background" extra="true">
				<pos>0 0</pos>
				<size>1 1</size>
				<path>./_inc/dreamc_b1l.PNG</path>
				<tile>false</tile>
				<zIndex>39</zIndex>
			</image>

			<text name="md_lbl_rating, md_lbl_playcount, md_playcount, md_publisher, md_lbl_genre, md_lbl_developer, md_lbl_publisher">
                        <fontPath>./../_res/fonts/AdobeBlank.ttf</fontPath>
                        <pos>1 1</pos>
                        <size>0.001 0.001</size>
                    </text>

	        <datetime name="md_releasedate, md_lbl_lastplayed, md_lbl_releasedate">
                        <fontPath>./../_res/fonts/AdobeBlank.ttf</fontPath>
                        <pos>1 1</pos>
                        <size>0.001 0.001</size>
                    </datetime>
            <text name="md_lbl_rating">
                <pos>1 1</pos>
                <color>000000</color>
                <size>0.001 0.001</size>
              
            </text>
            <rating name="md_rating">
				<filledPath>./../art/invisible.png</filledPath>
				<unfilledPath>./../art/invisible.png</unfilledPath>
			</rating>

			<image name="md_image">
				<pos>0.056 0.485</pos>			
				<origin>0 0</origin>
				<size>0.45 0.42</size>
				<zIndex>41</zIndex>	
			</image>

	</view>



<feature supported="video">

		<view name="video">
			<video name="md_video">
				<pos>0.056 0.485</pos>			
				<origin>0 0</origin>
				<size>0.45 0.42</size>
				<delay>1</delay>
				<default>./../_res/images/static.mp4</default>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>false</showSnapshotDelay>
				<zIndex>41</zIndex>
			</video>

			<image name="md_marquee">
				<pos>0.54 0.18</pos>
				<origin>0 0</origin>
				<size>0.4 0.10</size>
				<zIndex>41</zIndex>
			</image>
		</view>
	</feature>
</theme>