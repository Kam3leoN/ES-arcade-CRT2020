<theme>
	<formatVersion>4</formatVersion>
	
	<view name="system">
		<image name="background" extra="true">
				<size>1 0.5</size>
				<tile>true</tile>
				<path>./_inc/system_and.png</path>
				<tile>false</tile>
			</image>

		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>
	

		 <image name="logo_helper" extra="true">
			<path>./../art/andmavlog.png</path>
			<origin>0.2 0.5</origin>
			<pos>0.65 0.58</pos>
			<size>0.4 0.13</size>
		</image>

		<carousel name="systemcarousel">
	        <color>000000</color>
	        <colorEnd>E8F6FFF6</colorEnd>
	        <pos>0 0.6537</pos>
	        <size>1 0.2325</size>
	      </carousel>

				 
		<text name="systemInfo">
			<color>d0d0d0</color>
			<pos>0.15 0.5</pos>
	    	<backgroundColor>00000000</backgroundColor>
	        <alignment>left</alignment>
	        <fontSize>0.05</fontSize>
			<fontPath>./../_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
	      </text>
	</view>
	
	<view name="system, basic, detailed">
		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>
	</view>

	<view name="detailed,video">
		<image name="logo">
				<path>./_inc/system.svg</path>
				<pos>0.030 0.030</pos>			
				<origin>0 0</origin>
				<size>0.3 0.1</size>
			</image>

			<!--<image name="logoL" extra="true">
	            <tile>false</tile>
	            <pos>0.02 0.10</pos>			
				<origin>0 0</origin>
				<size>0.37 0.4</size>          
	            <path>./../art/backlin.png</path>
	         </image>-->
						
			<textlist name="gamelist">
				<selectorColor>001B9D</selectorColor>
				<selectedColor>ffffff</selectedColor>
				<primaryColor>ffffff</primaryColor>
				<secondaryColor>7a6161</secondaryColor>
				<forceUppercase>1</forceUppercase>
				<pos>0.05 0.13</pos>
				<size>0.350 0.35</size>
				<alignment>left</alignment>
				<horizontalMargin>0.0</horizontalMargin>
				<fontPath>./../_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
				<fontSize>0.045</fontSize>
			</textlist>

			<image name="bottom2" extra="true">
				<pos>0.07 0.83</pos>
				<size>0.330 0.160</size>
				<path>./../art/arcand.png</path>
				<tile>false</tile>
				<!--<rotation>-10</rotation>-->
			</image>


			<image name="background" extra="true">
				<pos>0.40 0.05</pos>
				<size>0.60 0.95</size>
				<tile>false</tile>
				<path>./art/dlca.JPG</path>
			</image>

			<text name="md_description">
				<color>ffffff</color>
				<fontPath>./../art/piccolo.ttf</fontPath>
				<forceUppercase>1</forceUppercase>
				<fontSize>0.045</fontSize>
				<pos>0.07 0.500</pos>
				<size>0.4 0.238</size>
			</text>	


			<text name="developer_label" extra="true">
					<pos>0.06 0.735</pos>
					<text>Developer</text>
					<color>00ffd9</color>
					<fontPath>./../art/TinyUnicode.ttf</fontPath>
					<forceUppercase>1</forceUppercase>
					<fontSize>0.07</fontSize>
					<!--<size>0.25 0.039</size>-->
				</text>

			<text name="md_developer">
				<color>ffffff</color>
				<fontPath>./../art/TinyUnicode.ttf</fontPath>
				<forceUppercase>1</forceUppercase>
				<fontSize>0.07</fontSize>
				<pos>0.06 0.780</pos>
				<size>0.4 0.038</size>
			</text>	
	
	
			<text name="md_lbl_rating, md_lbl_playcount, md_playcount, md_publisher, md_lbl_genre, md_lbl_publisher">
                        <fontPath>./../_res/fonts/AdobeBlank.ttf</fontPath>
                        <pos>1 1</pos>
                        <size>0.001 0.001</size>
                    </text>

        	<datetime name="md_lbl_lastplayed">
                        <fontPath>./../_res/fonts/AdobeBlank.ttf</fontPath>
                        <pos>1 1</pos>
                        <size>0.001 0.001</size>
                    </datetime>

            <text name="md_lbl_rating">
                <pos>1 1</pos>
                <color>000000</color>
                <size>0.001 0.001</size>
            </text>
            <rating name="md_rating">
				<filledPath>./../art/invisible.png</filledPath>
				<unfilledPath>./../art/invisible.png</unfilledPath>
			</rating>

			<image name="md_image">
				<pos>0.700 0.670</pos>
				<size>0.236 0.200</size>
				<origin>0.5 0.5</origin>		
			</image>
	</view>



<feature supported="video">

		<view name="video">

			<video name="md_video">
				<pos>0.700 0.670</pos>
				<size>0.236 0.200</size>
				<origin>0.5 0.5</origin>			
				<delay>0.6</delay>
				<default></default>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>false</showSnapshotDelay>
			</video>

			<image name="md_marquee">
				<pos>0.50 0.02</pos>
				<origin>0 0</origin>
				<size>0.40 0.09</size>
			</image>

		</view>

	</feature>

</theme>