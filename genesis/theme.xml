<theme>
	<formatVersion>4</formatVersion>
	

	<view name="system">
		<image name="background" extra="true">
				<size>1 0.5</size>
				<tile>true</tile>
				<path>./_inc/system_and.png</path>
				<tile>false</tile>
			</image>

		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>

		
		<image name="logo_helper" extra="true">
			<path>./../art/andmavlog.png</path>
			<origin>0.2 0.5</origin>
			<pos>0.65 0.58</pos>
			<size>0.4 0.13</size>
		</image>

		<carousel name="systemcarousel">
	        <color>000000</color>
	        <colorEnd>E8F6FFF6</colorEnd>
	        <pos>0 0.6537</pos>
	        <size>1 0.2325</size>
	      </carousel>

				 
		<text name="systemInfo">
			<color>d0d0d0</color>
			<pos>0.15 0.5</pos>
	    	<backgroundColor>00000000</backgroundColor>
	        <alignment>left</alignment>
	        <fontSize>0.05</fontSize>
			<fontPath>./../_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
	      </text>
	</view>

	
	<view name="system, basic">
		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>
	</view>

	<view name="detailed">
		
		<image name="md_image">
				<pos>0.23 0.25</pos>			
				<origin>0 0</origin>
				<size>0.30 0.51</size>
				</image>

			<image name="md_marquee">
				<pos>0.64 0.06</pos>
				<origin>0 0</origin>
				
				<size>0.33 0.10</size>
			</image>

			
			
			<image name="background" extra="true">
				<pos>0 0</pos>
				<size>0.75 0.9</size>
				<path>./_inc/megadr_bl.png</path>
				<tile>false</tile>
			</image>

			<textlist name="gamelist">
				<selectorColor>1c1c1c</selectorColor>
				<selectedColor>ffffff</selectedColor>
				<primaryColor>ffffff</primaryColor>
				<secondaryColor>7a6161</secondaryColor>
				<forceUppercase>1</forceUppercase>
				<pos>0.76 0.2</pos>
				<size>0.330 0.600</size>
				<alignment>left</alignment>
				<horizontalMargin>0.00</horizontalMargin>
				<fontSize>0.045</fontSize>
				<fontPath>./../_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
			</textlist>

			<image name="bottom2" extra="true">
				<pos>0.60 0.85</pos>
				<size>0.330 0.160</size>
				<path>./../art/arcand.png</path>
				<tile>false</tile>
			</image>
	</view>





<feature supported="video">

		<view name="video">

			<video name="md_video">
				<origin>0 0</origin>
				<pos>0.225 0.21</pos>			
				<size>0.30 0.45</size>
				<delay>0.2</delay>
				<default></default>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>false</showSnapshotDelay>
				<zIndex>40</zIndex>
			</video>

			<image name="md_marquee">
				<origin>0 0</origin>
				<pos>0.76 0.06</pos>
				<size>0.235 0.10</size>
			</image>
			
			<image name="background" extra="true">
				<pos>0 0</pos>
				<size>0.75 0.78</size>
				<path>./_inc/megadr_bl.png</path>
				<tile>false</tile>
				<zIndex>41</zIndex>
			</image>

			<image name="logo_helper" extra="true">
				<pos>0 0.78</pos>
				<size>0.75 0.075</size>
				<path>./_inc/system.svg</path>
				<tile>false</tile>
			</image>

			<textlist name="gamelist">
				<selectorColor>1c1c1c</selectorColor>
				<selectedColor>ffffff</selectedColor>
				<primaryColor>ffffff</primaryColor>
				<secondaryColor>7a6161</secondaryColor>
				<forceUppercase>1</forceUppercase>
				<pos>0.76 0.2</pos>
				<size>0.330 0.600</size>
				<alignment>left</alignment>
				<horizontalMargin>0.00</horizontalMargin>
				<fontSize>0.045</fontSize>
				<fontPath>./../_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
			</textlist>

			<image name="bottom2" extra="true">
				<pos>0.60 0.85</pos>
				<size>0.330 0.160</size>
				<path>./../art/arcand.png</path>
				<tile>false</tile>
			</image>

			<text name="md_lbl_lastplayed">
				<fontPath>./../art/piccolo.ttf</fontPath>
				<fontSize>0.035</fontSize>
				<color>ffffff</color>
				<origin>0 0</origin>
				<pos>0.1 0.85</pos>
				<forceUppercase>1</forceUppercase>
			</text>
			
			<datetime name="md_lastplayed">
				<fontPath>./../art/piccolo.ttf</fontPath>
				<fontSize>0.035</fontSize>
				<color>00ffd9</color>
				<origin>0 0</origin>
				<pos>0.3 0.848</pos>
				<size>0.192 0.049</size>
				<forceUppercase>1</forceUppercase>
			</datetime>

			<text name="md_lbl_playcount">
				<fontPath>./../art/piccolo.ttf</fontPath>
				<fontSize>0.035</fontSize>
				<color>ffffff</color>
				<origin>0 0</origin>
				<pos>0.1 0.89</pos>
				<forceUppercase>1</forceUppercase>
			</text>	

			<text name="md_playcount">
				<fontPath>./../art/piccolo.ttf</fontPath>
				<fontSize>0.035</fontSize>
				<color>00ffd9</color>
				<origin>0 0</origin>
				<pos>0.3 0.887</pos>
				<forceUppercase>1</forceUppercase>
			</text>	
			

			<text name="md_lbl_rating, md_rating, md_publisher, md_lbl_genre, md_lbl_developer, md_lbl_publisher">
                        <fontPath>./../_res/fonts/AdobeBlank.ttf</fontPath>
                        <pos>1 1</pos>
                        <size>0.001 0.001</size>
                    </text>

			<text name="md_releasedate, md_lbl_releasedate">
						<pos>1 1</pos>
						<size>0.192 0.030</size>
						<color>cccccc</color>
						<forceUppercase>1</forceUppercase>
						<fontPath>./../_res/fonts/AdobeBlank.ttf</fontPath>
						<fontSize>0.035</fontSize>
					</text>

		</view>

	</feature>

</theme>