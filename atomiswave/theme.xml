<theme>
	<formatVersion>4</formatVersion>
	<include>./../theme.xml</include>	
	<view name="system">
		<image name="background" extra="true">
				<size>1 0.4</size>
				<tile>true</tile>
				<path>./_inc/system_and.png</path>
				<tile>false</tile>
			</image>
		<image name="logo">
			<path>./_inc/system_svg.png</path>
		</image>
		 <image name="logo_helper" extra="true">
			<path>./../art/andmavlog.png</path>
			<origin>0.2 0.5</origin>
			<pos>0.65 0.58</pos>
			<size>0.4 0.13</size>
		</image>

		<carousel name="systemcarousel">
	        <color>000000</color>
	        <colorEnd>E8F6FFF6</colorEnd>
	        <pos>0 0.6537</pos>
	        <size>1 0.2325</size>
	      </carousel>

				 
		<text name="systemInfo">
			<color>d0d0d0</color>
			<pos>0.15 0.5</pos>
	    	<backgroundColor>00000000</backgroundColor>
	        <alignment>left</alignment>
	        <fontSize>0.05</fontSize>
			<fontPath>./../_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
	      </text>
	</view>

	
	<view name="system, basic">
		<image name="logo">
			<path>./_inc/system_svg.png</path>
		</image>
	</view>

	<view name="video">
   <helpsystem name="help">
            <origin>0 0</origin>
            <pos>1 1</pos>
    </helpsystem>
    <image name="bottom" extra="true">
            <path>./_res/images/white.png</path>
            <origin>0 0</origin>
            <pos>1 1</pos>
            
    </image>
</view>

	<view name="detailed">
		<image name="md_image">
				<pos>0.22 0.24</pos>			
				<origin>0 0</origin>
				<size>0.31 0.52</size>
				</image>
	</view>	

	<view name="detailed,video">
			<image name="md_marquee">
				<origin>0 0</origin>
				<pos>0.033 0.86</pos>
				<size>0.42 0.10</size>
			</image>
			<image name="background2" extra="true">
				<origin>0 0</origin>
				<pos>0.018 0.85</pos>
				<size>0.450 0.12</size>
				<path>./../art/backlin.png</path>
				<tile>false</tile>
			</image>
			<image name="background" extra="true">
				<pos>0 0</pos>
				<size>0.75 0.84</size>
				<path>./_inc/atom-log.png</path>
				<tile>false</tile>
			</image>

			<image name="logo_helper" extra="true">
				<pos>0.76 0.73</pos>
				<size>0.21 0.1</size>
				<path>./_inc/system_svg.png</path>
				<tile>false</tile>
			</image>
			<textlist name="gamelist">
				<selectorColor>001B9D</selectorColor>
				<selectedColor>ffffff</selectedColor>
				<primaryColor>ffffff</primaryColor>
				<secondaryColor>7a6161</secondaryColor>
				<forceUppercase>1</forceUppercase>
				<pos>0.76 0.24</pos>
				<size>0.21 0.500</size>
				<alignment>left</alignment>
				<horizontalMargin>0.00</horizontalMargin>
				<fontSize>0.045</fontSize>
				<fontPath>./../_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
			</textlist>

			<image name="bottom2" extra="true">
				<path>./../art/andmavlog.png</path>
				<origin>0 0</origin>
				<pos>0.56 0.85</pos>
				<size>0.4 0.13</size>
			</image>
			
			<text name="md_lbl_publisher">
				<fontPath>./../art/piccolo.ttf</fontPath>
				<text>Developer:</text>
				<color>ffffff</color>
				<pos>0.76 0.02</pos>
				<size>0.400 0.03</size>
				<forceUppercase>1</forceUppercase>
			</text>	
			<text name="md_publisher">
				<fontPath>./../art/piccolo.ttf</fontPath>
				<color>00ffd9</color>
				<pos>0.76 0.06</pos>
				<size>0.400 0.03</size>
				<forceUppercase>1</forceUppercase>
			</text>

			<text name="md_lbl_lastplayed">
				<fontPath>./../art/piccolo.ttf</fontPath>
				<color>ffffff</color>
				<pos>0.76 0.1</pos>
				<forceUppercase>1</forceUppercase>
			</text>
			
			<datetime name="md_lastplayed">
				<fontPath>./../art/piccolo.ttf</fontPath>
				<color>00ffd9</color>
				<pos>0.76 0.13</pos>
				<size>0.192 0.049</size>
				<forceUppercase>1</forceUppercase>
			</datetime>
			<text name="md_lbl_playcount">
				<fontPath>./../art/piccolo.ttf</fontPath>
				<color>ffffff</color>
				<pos>0.76 0.18</pos>
				<forceUppercase>1</forceUppercase>
			</text>	
			<text name="md_playcount">
				<fontPath>./../art/piccolo.ttf</fontPath>
				<color>00ffd9</color>
				<pos>0.76 0.20</pos>
				<forceUppercase>1</forceUppercase>
			</text>	
	</view>

<feature supported="video">

		<view name="video">

			<video name="md_video">
				<pos>0.22 0.24</pos>			
				<origin>0 0</origin>
				<size>0.31 0.52</size>
				<delay>0.2</delay>
				<default></default>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>false</showSnapshotDelay>
			</video>
			

		</view>

	</feature>

</theme>