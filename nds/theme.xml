<theme>
	<formatVersion>4</formatVersion>
	<include>./../theme.xml</include>

	<view name="system">
		<image name="background" extra="true">
				<size>1 0.5</size>
				<tile>true</tile>
				<path>./_inc/system_and.png</path>
				<tile>false</tile>
			</image>

		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>
	

	
		<image name="logo_helper" extra="true">
			<path>./../art/andmavlog.png</path>
			<origin>0.2 0.5</origin>
			<pos>0.65 0.58</pos>
			<size>0.4 0.13</size>
		</image>

		<carousel name="systemcarousel">
	        <color>000000</color>
	        <colorEnd>E8F6FFF6</colorEnd>
	        <pos>0 0.6537</pos>
	        <size>1 0.2325</size>
	      </carousel>

				 
		<text name="systemInfo">
			<color>d0d0d0</color>
			<pos>0.15 0.5</pos>
	    	<backgroundColor>00000000</backgroundColor>
	        <alignment>left</alignment>
	        <fontSize>0.05</fontSize>
			<fontPath>./../_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
	      </text>

	</view>

	
	<view name="system, basic">
		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>
	</view>

	<view name="detailed, video">

		<image name="background" extra="true">
				<pos>0.02 0.25</pos>
				<size>0.60 0.60</size>
				<path>./_inc/ndsbl.png</path>
				<tile>false</tile>
				<zIndex>42</zIndex>
			</image>

			<textlist name="gamelist">
				<selectorColor>1c1c1c</selectorColor>
				<selectedColor>ffffff</selectedColor>
				<primaryColor>ffffff</primaryColor>
				<secondaryColor>7a6161</secondaryColor>
				<forceUppercase>1</forceUppercase>
				<pos>0.62 0.2</pos>
				<size>0.330 0.7</size>
				<alignment>left</alignment>
				<horizontalMargin>0.00</horizontalMargin>
				<fontSize>0.039</fontSize>
				<fontPath>./../art/piccolo.ttf</fontPath>
				<lineSpacing>1.2</lineSpacing>
			</textlist>

			<image name="bottom2" extra="true">
				<pos>0.65 0.81</pos>
				<size>0.330 0.160</size>
				<path>./../art/arcand.png</path>
				<tile>false</tile>
				<zIndex>41</zIndex>
			</image>

			<text name="developer_label" extra="true">
					<pos>0.180 0.860</pos>
					<text>Developer:</text>
					<color>00ffd9</color>
					<fontPath>./../art/TinyUnicode.ttf</fontPath>
					<forceUppercase>1</forceUppercase>
					<fontSize>0.07</fontSize>
					<size>0.25 0.0333333333333333</size>
				</text>

			<text name="md_developer">
				<color>ffffff</color>
				<fontPath>./../art/TinyUnicode.ttf</fontPath>
				<forceUppercase>1</forceUppercase>
				<fontSize>0.07</fontSize>
				<pos>0.340 0.860</pos>
				<size>0.25 0.038</size>
			</text>	

			<text name="releasedate_label" extra="true">
					<pos>0.180 0.910</pos>
					<text>Release Date:</text>
					<color>00ffd9</color>
					<fontPath>./../art/TinyUnicode.ttf</fontPath>
					<forceUppercase>1</forceUppercase>
					<fontSize>0.07</fontSize>
					<size>0.25 0.0333333333333333</size>
				</text>

			<datetime name="md_releasedate">
				<color>ffffff</color>
				<fontPath>./../art/TinyUnicode.ttf</fontPath>
				<forceUppercase>1</forceUppercase>
				<fontSize>0.07</fontSize>
				<pos>0.370 0.910</pos>
				<size>0.25 0.038</size>
			</datetime>	

			<text name="md_description">
                <color>ffffff</color>
				<forceUppercase>1</forceUppercase>
				<fontPath>./../art/piccolo.ttf</fontPath>
				<fontSize>0.04</fontSize>
				<size>0.550 0.22</size>
				<pos>0.100 0.010</pos>
            </text>

		<text name="md_lbl_rating, md_lbl_playcount, md_playcount, md_publisher, md_lbl_genre, md_lbl_publisher">
                        <fontPath>./../_res/fonts/AdobeBlank.ttf</fontPath>
                        <fontSize>0.04</fontSize>
                        <pos>1 1</pos>
                        <size>0.001 0.001</size>
                    </text>

        	<datetime name="md_lbl_lastplayed">
                        <fontPath>./../_res/fonts/AdobeBlank.ttf</fontPath>
                        <fontSize>0.04</fontSize>
                        <pos>1 1</pos>
                        <size>0.001 0.001</size>
                    </datetime>
            <text name="md_lbl_rating">
                <pos>1 1</pos>
                <color>000000</color>
                <size>0.001 0.001</size>
              
            </text>
            <rating name="md_rating">
				<filledPath>./../art/invisible.png</filledPath>
				<unfilledPath>./../art/invisible.png</unfilledPath>
			</rating>
			<image name="md_image">
				<pos>0.18 0.299</pos>			
				<origin>0 0</origin>
				<zIndex>43</zIndex>
				<size>0.285 0.505</size>	
			</image>

	</view>



<feature supported="video">

		<view name="video">

			<video name="md_video">
				<pos>0.18 0.299</pos>			
				<origin>0 0</origin>
				<size>0.296 0.505</size>
				<delay>0.2</delay>
				<default></default>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>false</showSnapshotDelay>
				<zIndex>44</zIndex>
			</video>

			<image name="md_marquee">
				<pos>0.64 0.06</pos>
				<origin>0 0</origin>
				<zIndex>43</zIndex>
				<size>0.33 0.12</size>
			</image>
		</view>

	</feature>

</theme>