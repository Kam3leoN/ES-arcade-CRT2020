<theme>
	<formatVersion>4</formatVersion>
	

	<view name="system">
		<image name="background" extra="true">
				<size>1 0.5</size>
				<tile>true</tile>
				<path>./_inc/system_and.png</path>
				<tile>false</tile>
			</image>

		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>
	 <image name="logo_helper" extra="true">
			<path>./../art/andmavlog.png</path>
			<origin>0.2 0.5</origin>
			<pos>0.65 0.58</pos>
			<size>0.4 0.13</size>
		</image>

		<carousel name="systemcarousel">
	        <color>000000</color>
	        <colorEnd>E8F6FFF6</colorEnd>
	        <pos>0 0.6537</pos>
	        <size>1 0.2325</size>
	      </carousel>

				 
		<text name="systemInfo">
			<color>d0d0d0</color>
			<pos>0.15 0.5</pos>
	    	<backgroundColor>00000000</backgroundColor>
	        <alignment>left</alignment>
	        <fontSize>0.05</fontSize>
			<fontPath>./../_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
	      </text>

	</view>

	
	<view name="system, basic">
		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>
	</view>

	<view name="detailed">

		<image name="md_marquee">
				<pos>0.76 0.06</pos>
				<origin>0 0</origin>
				
				<size>0.20 0.10</size>
			</image>

			<textlist name="gamelist">
				<selectorColor>1c1c1c</selectorColor>
				<selectedColor>ffffff</selectedColor>
				<primaryColor>ffffff</primaryColor>
				<secondaryColor>7a6161</secondaryColor>
				<forceUppercase>1</forceUppercase>
				<pos>0.76 0.2</pos>
				<size>0.330 0.600</size>
				<alignment>left</alignment>
				<horizontalMargin>0.00</horizontalMargin>
				<fontSize>0.045</fontSize>
				<fontPath>./../_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
			</textlist>

			

			<image name="md_image">
				<pos>0.041 0.38</pos>			
				<origin>0 0</origin>
				<size>0.327 0.44</size>
				
			</image>


			<image name="background" extra="true">
				<pos>0 0</pos>
				<size>0.75 0.9</size>
				<path>./_inc/intell_lb1.png</path>
				<tile>false</tile>
			</image>

			<image name="bottom2" extra="true">
				<pos>0.60 0.85</pos>
				<size>0.330 0.160</size>
				<path>./../art/arcand.png</path>
				<tile>false</tile>
			</image>
	

	</view>




<feature supported="video">

		<view name="video">



			<image name="md_marquee">
				<pos>0.76 0.06</pos>
				<origin>0 0</origin>
				
				<size>0.20 0.10</size>
			</image>

			<textlist name="gamelist">
				<selectorColor>1c1c1c</selectorColor>
				<selectedColor>ffffff</selectedColor>
				<primaryColor>ffffff</primaryColor>
				<secondaryColor>7a6161</secondaryColor>
				<forceUppercase>1</forceUppercase>
				<pos>0.76 0.2</pos>
				<size>0.330 0.600</size>
				<alignment>left</alignment>
				<horizontalMargin>0.00</horizontalMargin>
				<fontSize>0.045</fontSize>
				<fontPath>./../_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
			</textlist>

			

			<video name="md_video">
				<pos>0.041 0.38</pos>			
				<origin>0 0</origin>
				<size>0.327 0.44</size>
				<delay>1</delay>
				<default></default>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>false</showSnapshotDelay>
			</video>


			<image name="background" extra="true">
				<pos>0 0</pos>
				<size>0.75 0.9</size>
				<path>./_inc/intell_lb1.png</path>
				<tile>false</tile>
			</image>

			<image name="logo_helper" extra="true">
				<pos>0.15 0.88</pos>
				<size>0.3 0.09</size>
				<path>./_inc/system.svg</path>
				<tile>false</tile>
			</image>

			<image name="bottom2" extra="true">
				<pos>0.60 0.85</pos>
				<size>0.330 0.160</size>
				<path>./../art/arcand.png</path>
				<tile>false</tile>
			</image>

		</view>

	</feature>

</theme>