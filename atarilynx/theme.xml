<theme>
	<formatVersion>4</formatVersion>
	<include>./../theme.xml</include>	
	<view name="system">
		<image name="background" extra="true">
				<size>1 0.5</size>
				<tile>true</tile>
				<path>./_inc/system_and.png</path>
				<tile>false</tile>
			</image>

		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>
	
		<image name="logo_helper" extra="true">
			<path>./../art/andmavlog.png</path>
			<origin>0.2 0.5</origin>
			<pos>0.65 0.58</pos>
			<size>0.4 0.13</size>
		</image>

		<carousel name="systemcarousel">
	        <color>000000</color>
	        <colorEnd>E8F6FFF6</colorEnd>
	        <pos>0 0.6537</pos>
	        <size>1 0.2325</size>
	      </carousel>

				 
		<text name="systemInfo">
			<color>d0d0d0</color>
			<pos>0.15 0.5</pos>
	    	<backgroundColor>00000000</backgroundColor>
	        <alignment>left</alignment>
	        <fontSize>0.05</fontSize>
			<fontPath>./../_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
	      </text>

	</view>

	<view name="system">
		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>
	</view>
	
	<view name="detailed,video,basic">
		
		<image name="background" extra="true">
				<pos>0 0</pos>
				<size>1 0.5</size>
				<path>./_inc/lynx_bg.png</path>
				<tile>false</tile>
			</image>

			<image name="logo" extra="true">
				<origin>0 0</origin>
				<pos>0.37 0.80</pos>
				<maxSize>0.2 0.3</maxSize>
				<path>./_inc/system.svg</path>
				<tile>false</tile>
			</image>

			<image name="bottom2" extra="true">
				<origin>0 0</origin>
				<pos>0.010 0.80</pos>
				<size>0.330 0.150</size>
				<path>./../art/andmavlog.png</path>
				<tile>false</tile>
			</image>

			<textlist name="gamelist">
				<selectorColor>001B9D</selectorColor>
				<selectedColor>ffffff</selectedColor>
				<primaryColor>ffffff</primaryColor>
				<secondaryColor>7a6161</secondaryColor>
				<forceUppercase>1</forceUppercase>
				<pos>0.60 0.5</pos>
				<size>0.330 0.42</size>
				<alignment>left</alignment>
				<horizontalMargin>0.00</horizontalMargin>
				<fontSize>0.045</fontSize>
				<fontPath>./../_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
				<lineSpacing>1.3</lineSpacing>
			</textlist>
			<text name="md_description">
                <color>ffffff</color>
				<forceUppercase>1</forceUppercase>
				<fontPath>./../_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
				<fontSize>0.04</fontSize>
				<size>0.5 0.29</size>
				<pos>0.010 0.520</pos>
            </text>

        	<text name="md_lbl_rating, md_lbl_playcount, md_playcount, md_publisher, md_lbl_genre, md_lbl_developer, md_lbl_publisher,md_releasedate, md_lbl_lastplayed, md_lbl_releasedate">
                        <fontPath>./../_res/fonts/AdobeBlank.ttf</fontPath>
                        <pos>1 1</pos>
                        <size>0.001 0.001</size>
                    </text>

            <rating name="md_rating">
				<filledPath>./../art/invisible.png</filledPath>
				<unfilledPath>./../art/invisible.png</unfilledPath>
			</rating>

			<image name="md_marquee">
				<pos>1 1</pos>
				<origin>0 0</origin>
				<size>0.001 0.001</size>
			</image>	
			<image name="md_image">
				<origin>0 0</origin>
				<pos>0.345 0.140</pos>
				<size>0.310 0.21</size>
			</image>


	</view>

<feature supported="video">

		<view name="video">

			<video name="md_video">
				<pos>0.345 0.140</pos>			
				<origin>0 0</origin>
				
				<size>0.310 0.21</size>
				<delay>0.2</delay>
				<default></default>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>false</showSnapshotDelay>
			</video>
		</view>

	</feature>

</theme>