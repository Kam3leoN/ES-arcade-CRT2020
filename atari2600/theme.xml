<theme>
	<formatVersion>4</formatVersion>
	<include>./../theme.xml</include>
	<view name="system">
		<image name="logo">
				<path>./art/system.svg</path>
        </image>

        	<image name="background" extra="true">
				<size>1 0.5</size>
				<tile>true</tile>
				<path>./art/system_and.png</path>
				<tile>false</tile>
			</image>

		<image name="logo">
			<path>./art/system.svg</path>
        </image>
		<image name="logo_helper" extra="true">
			<path>./../art/andmavlog.png</path>
			<origin>0.2 0.5</origin>
			<pos>0.65 0.58</pos>
			<size>0.4 0.13</size>
		</image>

		<carousel name="systemcarousel">
	        <color>000000</color>
	        <colorEnd>E8F6FFF6</colorEnd>
	        <pos>0 0.6537</pos>
	        <size>1 0.2325</size>
	      </carousel>

				 
		<text name="systemInfo">
			<color>d0d0d0</color>
			<pos>0.15 0.5</pos>
	    	<backgroundColor>00000000</backgroundColor>
	        <alignment>left</alignment>
	        <fontSize>0.05</fontSize>
			<fontPath>./../_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
	      </text>

	</view>

		
	<view name="basic, detailed, video">

		<image name="background" extra="true">
				<pos>-0.10 0.20</pos>
				<size>0.80 0.77</size>
				<path>./_inc/tv2600.jpg</path>
				<tile>false</tile>
				<zIndex>39</zIndex>
		</image>

		<image name="bottom2" extra="true">
				<pos>0.70 0.03</pos>
				<size>0.280 0.250</size>
				<path>./_inc/padd.jpg</path>
				<tile>false</tile>
		</image>

		
		

		<textlist name="gamelist">
			<selectorColor>db5050</selectorColor>
			<selectedColor>ffffff</selectedColor>
			<primaryColor>969696</primaryColor>
			<secondaryColor>7a6161</secondaryColor>
			<fontPath>./../art/piccolo.ttf</fontPath>
			<forceUppercase>1</forceUppercase>
			<pos>0.72 0.4</pos>
			<size>0.24 0.550</size>
			<alignment>left</alignment>
			<horizontalMargin>0.00</horizontalMargin>
			<fontSize>0.035</fontSize>
			<scrollSound>./../art/scroll.wav</scrollSound>
			<lineSpacing>1.25</lineSpacing>
		</textlist>

		<text name="rating_label" extra="true">
				<pos>0.72 0.300</pos>
				<text>Rating</text>
				<color>00ffd9</color>
				<fontPath>./../art/TinyUnicode.ttf</fontPath>
				<forceUppercase>1</forceUppercase>
				<fontSize>0.07</fontSize>
				<size>0.25 0.0333333333333333</size>
		</text>

		<rating name="md_rating">
			<pos>0.72 0.350</pos>
			<size>0.0166666666666667 0.0296296296296296</size>		
			<filledPath>./../art/heart_filled.png</filledPath>
			<unfilledPath>./../art/heart_empty.png</unfilledPath>
		</rating>

		<text name="md_lbl_publisher">
				<text>Developer:</text>
				<color>00ffd9</color>
				<fontPath>./../art/TinyUnicode.ttf</fontPath>
				<forceUppercase>1</forceUppercase>
				<fontSize>0.07</fontSize>
				<pos>0.041 0.45</pos>
				<size>0.400 0.03</size>
			</text>	
		<text name="md_publisher">
				<color>ffffff</color>
				<pos>0.041 0.485</pos>
				<size>0.400 0.03</size>
				<fontPath>./../art/TinyUnicode.ttf</fontPath>
				<forceUppercase>1</forceUppercase>
				<fontSize>0.07</fontSize>
		</text>

		<text name="md_lbl_lastplayed">
				<fontPath>./../art/TinyUnicode.ttf</fontPath>
				<forceUppercase>1</forceUppercase>
				<fontSize>0.07</fontSize>
				<color>00ffd9</color>
				<pos>0.041 0.53</pos>
			</text>
			
			<datetime name="md_lastplayed">
				<fontPath>./../art/TinyUnicode.ttf</fontPath>
				<forceUppercase>1</forceUppercase>
				<fontSize>0.07</fontSize>
				<color>ffffff</color>
				<pos>0.041 0.58</pos>
				<size>0.192 0.049</size>
			</datetime>

			<image name="md_image">
				<pos>0.44 0.465</pos>
				<size>0.275 0.340</size>
				<origin>0.5 0.5</origin>
			</image>

	</view>


<feature supported="video">

		<view name="video">

			<video name="md_video">
				<pos>0.44 0.465</pos>
				<size>0.275 0.340</size>
				<origin>0.5 0.5</origin>			
				<delay>1</delay>
				<default>./../_res/images/static.mp4</default>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>false</showSnapshotDelay>
				<zIndex>40</zIndex>
			</video>

			
			<image name="md_marquee">
				<origin>0 0</origin>
				<size>0.001 0.001</size>
			</image>

			<image name="logo">
				<path>./art/system.svg</path>
				<pos>0.15 0.070</pos>
				<origin>0.1 0.1</origin>
				<size>0.460 0.110</size>
			</image>

				

		</view>

	</feature>
	
	
</theme>