<theme>
	<formatVersion>4</formatVersion>
    <include>./../theme.xml</include>
			
	<view name="system">
		<image name="background" extra="true">
				<size>1 0.5</size>
				<tile>true</tile>
				<path>./_inc/system_and.png</path>
				<tile>false</tile>
			</image>

		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>
	
         <image name="logo_helper" extra="true">
			<path>./../art/andmavlog.png</path>
			<origin>0.2 0.5</origin>
			<pos>0.65 0.58</pos>
			<size>0.4 0.13</size>
		</image>

		<carousel name="systemcarousel">
	        <color>000000</color>
	        <colorEnd>E8F6FFF6</colorEnd>
	        <pos>0 0.6537</pos>
	        <size>1 0.2325</size>
	      </carousel>
			 
		<text name="systemInfo">
			<color>d0d0d0</color>
			<pos>0.15 0.5</pos>
	    	<backgroundColor>00000000</backgroundColor>
	        <alignment>left</alignment>
	        <fontSize>0.05</fontSize>
			<fontPath>./../_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
	      </text>
	</view>
	
	<view name="basic, detailed, video">
		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>
	</view>

	<view name="detailed">
		<image name="md_image">
				<pos>0.57 0.35</pos>			
				<origin>0 0</origin>
				<size>0.28 0.40</size>
		</image>

	</view>

	<view name="detailed, video">

			<image name="background" >
				<tile>false</tile>
				<pos>0.010 0</pos>
				<origin>0 0</origin>
				<size>1 1</size>
				<path>./art/c64_d_.png</path>
			</image>

			<image name="logo">
				<path>./art/system.svg</path>
				<pos>0.700 0.864</pos>
				<maxSize>0.460 0.126</maxSize>
				<origin>0.5 0.5</origin>
			</image>

			
			<textlist name="gamelist">
				<selectorColor>1c1c1c</selectorColor>
				<selectedColor>ffffff</selectedColor>
				<primaryColor>7373ff</primaryColor>
				<secondaryColor>7a6161</secondaryColor>
				<fontPath>./../art/C64.ttf</fontPath>
				<forceUppercase>1</forceUppercase>
				<pos>0.032 0.310</pos>
				<size>0.460 0.500</size>
				<alignment>left</alignment>
				<horizontalMargin>0.00</horizontalMargin>
				<fontSize>0.03</fontSize>
				<scrollSound>./art/scroll.wav</scrollSound>
			</textlist>

			<text name="logo_label" extra="true">
					<pos>0.56 0.032</pos>
					<text>@AndreaMav 2020</text>
					<color>0000AA</color>
					<fontPath>./../art/C64.ttf</fontPath>
					<forceUppercase>1</forceUppercase>
					<fontSize>0.03</fontSize>
					<size>0.40 0.008</size>
				</text>

			<text name="md_lbl_lastplayed">
				<fontPath>./../art/C64.ttf</fontPath>
				<fontSize>0.025</fontSize>
				<color>ffffff</color>
				<pos>0.032 0.8</pos>
				<forceUppercase>1</forceUppercase>
			</text>
			
			<datetime name="md_lastplayed">
				<fontPath>./../art/C64.ttf</fontPath>
				<fontSize>0.025</fontSize>
				<color>00ffd9</color>
				<pos>0.28 0.798</pos>
				<size>0.192 0.049</size>
				<forceUppercase>1</forceUppercase>
			</datetime>

			<text name="md_lbl_playcount">
				<fontPath>./../art/C64.ttf</fontPath>
				<fontSize>0.025</fontSize>
				<color>ffffff</color>
				<pos>0.032 0.835</pos>
				<forceUppercase>1</forceUppercase>
			</text>	

			<text name="md_playcount">
				<fontPath>./../art/C64.ttf</fontPath>
				<fontSize>0.025</fontSize>
				<color>00ffd9</color>
				<pos>0.28 0.83</pos>
				<size>0.192 0.049</size>
				<forceUppercase>1</forceUppercase>
			</text>

			<text name="md_lbl_rating, md_lbl_genre,md_lbl_developer, md_developer, md_plateyers,  md_lbl_publisher,md_releasedate,  md_lbl_releasedate, md_players, md_lbl_players">
                        <fontPath>./../_res/fonts/AdobeBlank.ttf</fontPath>
                        <origin>0 0</origin>
                        <pos>1 1</pos>
                        <size>0.001 0.001</size>
                    </text>

            <rating name="md_rating">
				<filledPath>./../art/invisible.png</filledPath>
				<unfilledPath>./../art/invisible.png</unfilledPath>
			</rating>
		
	</view>



<feature supported="video">

		<view name="video">
			<video name="md_video">
				<pos>0.57 0.35</pos>			
				<origin>0 0</origin>
				<size>0.28 0.40</size>
				<delay>1</delay>
				<default>./../_res/images/static.mp4</default>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>true</showSnapshotDelay>
			</video>

			<image name="md_marquee">
				<pos>0.50 0.23</pos>
				<origin>0 0</origin>
				<size>0.40 0.10</size>
			</image>
		</view>
	</feature>
</theme>