<theme>
    <formatVersion>4</formatVersion>
    <include>./../theme.xml</include>

	<view name="system">

			<image name="background" extra="true">
				<size>1 0.5</size>
				<tile>true</tile>
				<path>./art/system_and.png</path>
				<tile>false</tile>
			</image>

		<image name="logo">
			<path>./art/system.svg</path>
        </image>

        <image name="logo_helper" extra="true">
			<path>./art/arcand.png</path>
			<origin>0.2 0.5</origin>
			<pos>0.65 0.585</pos>
			<size>0.4 0.17</size>
		</image>
	</view>

	<!--<feature supported="carousel">-->
      <view name="system">
         <carousel name="systemcarousel">
            <type>horizontal</type>
            <color>1c1c1cdd</color>
         </carousel>
         <text name="systemInfo">
			<color>d0d0d0</color>
			<pos>0.15 0.5</pos>
	    	<backgroundColor>00000000</backgroundColor>
	        <alignment>left</alignment>
	        <fontSize>0.05</fontSize>
			<fontPath>./../_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
	      </text>
      </view>
	<view name="detailed, video">

		<image name="md_image">
				<pos>0.540 0.531</pos>
				<size>0.416 0.449</size>
				<origin>0.1 0.1</origin>	
			</image>

		<image name="logo">
			<path>./art/system.svg</path>
			<pos>0.206 0.174</pos>
			<maxSize>0.460 0.126</maxSize>
			<origin>0.5 0.5</origin>
		</image>

		<image name="background" extra="true">
				<size>0.95 0.95</size>
				<tile>true</tile>
				<path>./art/wb_bg2.png</path>
				<tile>false</tile>
		</image>

		<textlist name="gamelist">
			<selectorColor>ffffff</selectorColor>
			<selectedColor>f46b42</selectedColor>
			<primaryColor>ffffff</primaryColor>
			<secondaryColor>7a6161</secondaryColor>
			<fontPath>./art/Cabin-Bold.ttf</fontPath>
			<fontSize>0.045</fontSize>
			<forceUppercase>1</forceUppercase>
			<pos>0.028 0.375</pos>
			<size>0.400 0.55</size>
			<alignment>left</alignment>
			<horizontalMargin>0.00</horizontalMargin>
			<scrollSound>./../art/scroll.wav</scrollSound>
			<lineSpacing>1.33</lineSpacing>
		</textlist>
	</view>

	<feature supported="video">

		<view name="video">

			<video name="md_video">
				<pos>0.540 0.531</pos>
				<size>0.416 0.449</size>
				<origin>0.1 0.1</origin>			
				<delay>1</delay>
				<default>./../_inc/videos/static.mp4</default>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>false</showSnapshotDelay>
			</video>

			<image name="md_image">
				<pos>0.540 0.531</pos>
				<size>0.416 0.449</size>
				<origin>0.1 0.1</origin>	
			</image>


			
		</view>

	</feature>

</theme>