<theme>
	<formatVersion>4</formatVersion>
	<include>./../theme.xml</include>

	<view name="system">
		<image name="background" extra="true">
				<size>1 0.5</size>
				<tile>true</tile>
				<path>./_inc/sega3.png</path>
				<tile>false</tile>
			</image>

		<image name="logo">
			<path>./_inc/logosm3.png</path>
		</image>
	

	
		<image name="logo_helper" extra="true">
			<path>./../art/andmavlog.png</path>
			<origin>0.2 0.5</origin>
			<pos>0.65 0.58</pos>
			<size>0.4 0.13</size>
		</image>

		<carousel name="systemcarousel">
	        <color>000000</color>
	        <colorEnd>E8F6FFF6</colorEnd>
	        <pos>0 0.6537</pos>
	        <size>1 0.2325</size>
	      </carousel>

				 
		<text name="systemInfo">
			<color>d0d0d0</color>
			<pos>0.15 0.5</pos>
	    	<backgroundColor>00000000</backgroundColor>
	        <alignment>left</alignment>
	        <fontSize>0.05</fontSize>
			<fontPath>./../_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
	      </text>
	</view>
	
	<view name="system, basic">
		<image name="logo">
			<path>./_inc/logosm3.png</path>
		</image>
	</view>

<view name="detailed, video">

	<image name="logo">
				<path>./_inc/logosm3.png</path>
				<origin>0 0</origin>
                <pos>0.020 0.015</pos>
			</image>

			<image name="gamelist-matte" extra="true">
                <path>./../_res/images/red.png</path>
                <origin>0 0</origin>
                <pos>0.53 0.27</pos>
                <size>0.4 0.660</size>
                <tile>false</tile>
            </image>
			
			<textlist name="gamelist">
				<selectorColor>1c1c1c</selectorColor>
				<selectedColor>ffffff</selectedColor>
				<primaryColor>ffffff</primaryColor>
				<secondaryColor>7a6161</secondaryColor>
				<forceUppercase>1</forceUppercase>
				<pos>0.55 0.29</pos>
				<size>0.370 0.630</size>
				<alignment>left</alignment>
				<horizontalMargin>0.00</horizontalMargin>
				<fontSize>0.043</fontSize>
				<lineSpacing>1.2</lineSpacing>
				<fontPath>./../_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
			</textlist>

			<image name="logoV" extra="true">
	            <tile>false</tile>
	            <pos>0.035 0.30</pos>			
				<origin>0 0</origin>
				<size>0.5 0.52</size>          
	            <path>./../art/backlin.png</path>
	         </image>
	         <image name="logoV-highlight" extra="true">
	            <path>./../_res/images/white.png</path>
	            <origin>0 0</origin>
	            <pos>0.06 0.445</pos>
	            <size>0.45 0.005</size>
	            <color>BA7300</color>
	        </image>

			<image name="bottom1" extra="true">
				<origin>0 0</origin>
                <pos>0.29 0.030</pos>
				<size>0.20 0.23</size>
				<path>./_inc/sr2.jpg</path>
				<tile>false</tile>
				<rotation>-5</rotation>				
			</image>

			<image name="bottom2" extra="true">
				<pos>0.55 0.01</pos>
				<size>0.330 0.160</size>
				<path>./../art/arcand.png</path>
				<tile>false</tile>
			</image>

			<text name="md_lbl_lastplayed">
			<origin>0 0</origin>
				<fontPath>./../art/piccolo.ttf</fontPath>
				<color>00ffd9</color>
				<forceUppercase>1</forceUppercase>
				<pos>0.056 0.80</pos>
			</text>
			
			<datetime name="md_lastplayed">
				<origin>0 0</origin>
				<fontPath>./../art/piccolo.ttf</fontPath>
				<color>ffffff</color>
				<pos>0.066 0.780</pos>
				<forceUppercase>1</forceUppercase>
				<size>0.056 0.80</size>
			</datetime>
			
			<text name="md_lbl_playcount">
				<origin>0 0</origin>
				<fontPath>./../art/piccolo.ttf</fontPath>
				<color>00ffd9</color>
				<forceUppercase>1</forceUppercase>
				<pos>0.056 0.83</pos>
			</text>	

			<text name="md_playcount">
				<origin>0 0</origin>
				<fontPath>./../art/piccolo.ttf</fontPath>
				<color>ffffff</color>
				<pos>0.25 0.824</pos>
			</text>	


			<text name="md_lbl_rating, md_publisher, md_lbl_genre, md_lbl_developer, md_lbl_publisher">
                        <fontPath>./../_res/fonts/AdobeBlank.ttf</fontPath>
                        <pos>1 1</pos>
                        <size>0.001 0.001</size>
                    </text>

	        <datetime name="md_releasedate, md_lbl_releasedate">
                        <fontPath>./../_res/fonts/AdobeBlank.ttf</fontPath>
                        <pos>1 1</pos>
                        <size>0.001 0.001</size>
                    </datetime>

            <text name="md_lbl_rating">
                <pos>1 1</pos>
                <color>000000</color>
                <size>0.001 0.001</size>
              
            </text>
            <rating name="md_rating">
				<filledPath>./../art/invisible.png</filledPath>
				<unfilledPath>./../art/invisible.png</unfilledPath>
			</rating>
	</view>

	<view name="detailed">

			<image name="md_marquee">
				<pos>0.06 0.32</pos>
				<origin>0 0</origin>
				<size>0.45 0.12</size>
			</image>
			<image name="md_image">
				<pos>0.06 0.45</pos>			
				<origin>0 0</origin>
				<size>0.45 0.35</size>
			</image>
	</view>



<feature supported="video">

		<view name="video">

			
				

			<video name="md_video">
				<pos>0.06 0.45</pos>			
				<origin>0 0</origin>
				<size>0.45 0.35</size>
				<delay>1</delay>
				<default>./../_res/images/static.mp4</default>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>false</showSnapshotDelay>
			</video>

			<image name="md_marquee">
				<pos>0.06 0.32</pos>
				<origin>0 0</origin>
				<size>0.45 0.12</size>
			</image>

			

		</view>

	</feature>

</theme>