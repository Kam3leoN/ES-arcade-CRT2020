<theme>
	<formatVersion>4</formatVersion>
	 <include>./../theme.xml</include>

	
	<view name="system">
		<image name="background" extra="true">
				<size>0.6 0.5</size>
				<pos>0.2 0</pos>
				<path>./_inc/system_and.png</path>
				<tile>false</tile>
			</image>

		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>
	
<image name="logo_helper" extra="true">
			<path>./../art/andmavlog.png</path>
			<origin>0.2 0.5</origin>
			<pos>0.65 0.58</pos>
			<size>0.4 0.13</size>
		</image>

		<carousel name="systemcarousel">
	        <color>000000</color>
	        <colorEnd>E8F6FFF6</colorEnd>
	        <pos>0 0.6537</pos>
	        <size>1 0.2325</size>
	      </carousel>

				 
		<text name="systemInfo">
			<color>d0d0d0</color>
			<pos>0.15 0.5</pos>
	    	<backgroundColor>00000000</backgroundColor>
	        <alignment>left</alignment>
	        <fontSize>0.05</fontSize>
			<fontPath>./../_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
	      </text>
	</view>

	
	<view name="system, basic">
		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>
	</view>

	<view name="detailed, video">

			<image name="background" extra="true">
				<pos>0.47 0</pos>
				<size>0.5 0.95</size>
				<path>./_inc/gb1.png</path>
				<tile>false</tile>
			</image>
			<image name="logo_helper" extra="true">
				<pos>0.65 0.80</pos>
				<size>0.22 0.09</size>
				<path>./_inc/system.svg</path>
				<tile>false</tile>
			</image>

			<textlist name="gamelist">
				<selectorColor>001B9D</selectorColor>
				<selectedColor>ffffff</selectedColor>
				<primaryColor>ffffff</primaryColor>
				<secondaryColor>7a6161</secondaryColor>
				<forceUppercase>1</forceUppercase>
				<pos>0.030 0.23</pos>
				<size>0.400 0.600</size>
				<alignment>left</alignment>
				<horizontalMargin>0.00</horizontalMargin>
				<fontSize>0.045</fontSize>
				<fontPath>./../_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
				<lineSpacing>1.2</lineSpacing>
			</textlist>

			<image name="bottom2" extra="true">
				<pos>0.080 0.84</pos>
				<size>0.330 0.110</size>
				<path>./../art/andmavlog.png</path>
				<tile>false</tile>
			</image>

			


		<text name="md_lbl_rating, md_lbl_playcount, md_playcount, md_publisher, md_lbl_genre, md_lbl_developer, md_lbl_publisher">
                        <fontPath>./../_res/fonts/AdobeBlank.ttf</fontPath>
                        <pos>1 1</pos>
                        <size>0.001 0.001</size>
                    </text>

        <datetime name="md_releasedate, md_lbl_lastplayed, md_lbl_releasedate">
                        <fontPath>./../_res/fonts/AdobeBlank.ttf</fontPath>
                        <pos>1 1</pos>
                        <size>0.001 0.001</size>
                    </datetime>
              <image name="md_image">
				<pos>0.565 0.115</pos>			
				<origin>0 0</origin>
				<size>0.319 0.380</size>	
			</image>


	</view>



<feature supported="video">

		<view name="video">

			<video name="md_video">
				<pos>0.565 0.115</pos>			
				<origin>0 0</origin>
				<size>0.319 0.380</size>
				<delay>0.2</delay>
				<default></default>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>false</showSnapshotDelay>
			</video>

			<image name="md_marquee">
				<pos>0.040 0.10</pos>
				<origin>0 0</origin>
				<size>0.40 0.10</size>
			</image>
									
			
			

		</view>

	</feature>

</theme>