<theme>
	<formatVersion>4</formatVersion>
	<include>./../theme.xml</include>
		        
	<view name="system">
		<image name="background" extra="true">
				<size>1 0.5</size>
				<tile>true</tile>
				<path>./_inc/system_and.png</path>
				<tile>false</tile>
			</image>

		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>

		<image name="logo_helper" extra="true">
			<path>./../art/andmavlog.png</path>
			<origin>0.2 0.5</origin>
			<pos>0.65 0.58</pos>
			<size>0.4 0.13</size>
		</image>

		<carousel name="systemcarousel">
	        <color>000000</color>
	        <colorEnd>E8F6FFF6</colorEnd>
	        <pos>0 0.6537</pos>
	        <size>1 0.2325</size>
	      </carousel>

				 
		<text name="systemInfo">
			<color>d0d0d0</color>
			<pos>0.15 0.5</pos>
	    	<backgroundColor>00000000</backgroundColor>
	        <alignment>left</alignment>
	        <fontSize>0.05</fontSize>
			<fontPath>./../_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
	      </text>
	</view>

	<view name="system, basic">
	
		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>
	</view>

<view name="detailed, video">
		<image name="background" extra="true">
			<origin>0 0</origin>
				<pos>0.020 0.09</pos>
				<size>0.63 0.60</size>
				<path>./_inc/boxsnes.png</path>
				<tile>false</tile>				
			</image>
		
		<image name="md_image">
				<pos>0.020 0.09</pos>			
				<origin>0 0</origin>
				<size>0.63 0.60</size>
			</image>

		<!--<image name="background" >
				<tile>false</tile>
				<pos>0.011 0.05</pos>
				<origin>0 0</origin>
				<size>0.57 0.63</size>
				<path>./../_inc/images/bg_color_grey.png</path>
			</image>-->

			<text name="md_description">
                <color>ffffff</color>
				<forceUppercase>0</forceUppercase>
				<fontPath>./../art/C64.ttf</fontPath>
				<fontSize>0.03</fontSize>
				<size>0.630 0.20</size>
				<pos>0.020 0.700</pos>
            </text>

			
			<textlist name="gamelist">
				<selectorColor>1c1c1c</selectorColor>
				<selectedColor>ffffff</selectedColor>
				<primaryColor>7373ff</primaryColor>
				<secondaryColor>7a6161</secondaryColor>
				<fontPath>./../art/C64.ttf</fontPath>
				<forceUppercase>1</forceUppercase>
				<origin>0 0</origin>
				<pos>0.65 0.230</pos>
				<size>0.330 0.600</size>
				<alignment>left</alignment>
				<horizontalMargin>0.00</horizontalMargin>
				<fontSize>0.03</fontSize>
				<scrollSound>./../art/scroll.wav</scrollSound>
			</textlist>

			
			
			<image name="bottom2" extra="true">
				<pos>0.640 0.060</pos>
				<size>0.330 0.165</size>
				<path>./../art/arcand.png</path>
				<tile>false</tile>
			</image>	

			<text name="md_lbl_lastplayed">
			<origin>0 0</origin>
				<fontPath>./../art/piccolo.ttf</fontPath>
				<color>00ffd9</color>
				<forceUppercase>1</forceUppercase>
				<pos>0.632 0.83</pos>
			</text>
			
			<datetime name="md_lastplayed">
				<origin>0 0</origin>
				<fontPath>./../art/piccolo.ttf</fontPath>
				<color>ffffff</color>
				<pos>0.65 0.780</pos>
				<size>0.65 0.83</size>
			</datetime>
			
			<text name="md_lbl_playcount">
				<origin>0 0</origin>
				<fontPath>./../art/piccolo.ttf</fontPath>
				<color>00ffd9</color>
				<forceUppercase>1</forceUppercase>
				<pos>0.632 0.87</pos>
			</text>	

			<text name="md_playcount">
				<origin>0 0</origin>
				<fontPath>./../art/piccolo.ttf</fontPath>
				<color>ffffff</color>
				<pos>0.83 0.866</pos>
			</text>		
			
			<text name="md_lbl_rating">
                <pos>1 1</pos>
                <color>000000</color>
                <size>0.001 0.001</size>
              
            </text>
            <rating name="md_rating">
				<filledPath>./../art/invisible.png</filledPath>
				<unfilledPath>./../art/invisible.png</unfilledPath>
			</rating>
</view>




<feature supported="video">

		<view name="video">

			<video name="md_video">
				<pos>0.020 0.09</pos>			
				<origin>0 0</origin>
				<size>0.63 0.60</size>
				<delay>1</delay>
				<default></default>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>false</showSnapshotDelay>
			</video>

			<image name="md_marquee">
				<pos>0.060 0.085</pos>
				<origin>0 0</origin>
				
				<size>0.40 0.070</size>
			</image>
        
		</view>
	</feature>
</theme>